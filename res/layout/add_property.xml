<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/egg_shell"
    tools:context=".Add_Property" >

    <TextView
	    android:id="@+id/add_property_instuctions_text"
	    android:text="@string/add_property_instructions"
	    android:gravity="left|center_vertical"
	    android:layout_width="fill_parent"
	    android:layout_marginLeft="20dp"
	    android:textStyle="bold"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
      	android:layout_height="wrap_content"
      	android:textColor="@color/black"
	    />
    
    <ScrollView 
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:padding="5dp"
         >
        	
		<LinearLayout
	    	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:background="@drawable/table"
        	android:paddingBottom="10dp"
        	android:layout_marginBottom="10dp"
        	android:paddingLeft="15dp"
    		android:paddingRight="15dp"
    		android:paddingTop="5dp"
        	android:orientation="vertical" >
	    	
	        
	        	<TextView
	        		android:id="@+id/add_property_name_ViewText"
	        		android:text="@string/property_name"
	        		android:gravity="left|center_vertical"
	        		android:textColor="@color/black"
	        		android:layout_marginLeft="20dp"
	        		android:textStyle="bold"
               		android:layout_marginRight="20dp"
               		android:layout_marginTop="10dp"
	        		android:layout_width="fill_parent"
        			android:layout_height="wrap_content"
	        	/>
	        	
	        	<EditText
	        	    android:id="@+id/add_property_name_EditText"
	        	    android:background="@drawable/textedit"
	        	    android:layout_width="fill_parent"
	        	    android:layout_height="wrap_content"
	        	    android:layout_marginLeft="20dp"
               		android:layout_marginRight="20dp"
                	android:layout_marginTop="7dp"
                	android:paddingBottom="6dp"
    				android:paddingLeft="10dp"
    				android:paddingRight="10dp"
    				android:paddingTop="6dp"
	        	    android:inputType="text" />
	        
	        	
	    	    
	    	    
	    	    <TextView
	        		android:id="@+id/add_property_address_ViewText"
	        		android:text="@string/property_address"
	        		android:gravity="left|center_vertical"
	        		android:textColor="@color/black"
	        		android:layout_marginLeft="20dp"
	        		android:textStyle="bold"
               		android:layout_marginRight="20dp"
               		android:layout_marginTop="20dp"
	        		android:layout_width="fill_parent"
        			android:layout_height="wrap_content"
	        	/>
	    	    
	    	    <EditText
	        	    android:id="@+id/add_property_address_EditText"
	        	    android:background="@drawable/textedit"
	        	    android:layout_width="fill_parent"
	        	    android:layout_height="wrap_content"
	        	    android:layout_marginLeft="20dp"
               		android:layout_marginRight="20dp"
                	android:layout_marginTop="7dp"
                	android:paddingBottom="6dp"
    				android:paddingLeft="10dp"
    				android:paddingRight="10dp"
    				android:paddingTop="6dp"
	        	    android:inputType="text" />
	    	    
	    	    <TextView
	        		android:id="@+id/add_property_state_ViewText"
	        		android:text="@string/state"
	        		android:gravity="left|center_vertical"
	        		android:textColor="@color/black"
	        		android:layout_marginLeft="20dp"
	        		android:textStyle="bold"
               		android:layout_marginRight="20dp"
               		android:layout_marginTop="20dp"
	        		android:layout_width="fill_parent"
        			android:layout_height="wrap_content"
	        	/>
	    	    
	    	    <EditText
	        	    android:id="@+id/add_property_state_EditText"
	        	    android:background="@drawable/textedit"
	        	    android:layout_width="fill_parent"
	        	    android:layout_height="wrap_content"
	        	    android:layout_marginLeft="20dp"
               		android:layout_marginRight="20dp"
                	android:layout_marginTop="7dp"
                	android:paddingBottom="6dp"
    				android:paddingLeft="10dp"
    				android:paddingRight="10dp"
    				android:paddingTop="6dp"
	        	    android:inputType="text" />
	    	    
	    	    <TextView
	        		android:id="@+id/add_property_city_ViewText"
	        		android:text="@string/city"
	        		android:gravity="left|center_vertical"
	        		android:textColor="@color/black"
	        		android:layout_marginLeft="20dp"
	        		android:textStyle="bold"
               		android:layout_marginRight="20dp"
               		android:layout_marginTop="20dp"
	        		android:layout_width="fill_parent"
        			android:layout_height="wrap_content"
	        	/>
	    	    
	    	    <EditText
	        	    android:id="@+id/add_property_city_EditText"
	        	    android:background="@drawable/textedit"
	        	    android:layout_width="fill_parent"
	        	    android:layout_height="wrap_content"
	        	    android:layout_marginLeft="20dp"
               		android:layout_marginRight="20dp"
                	android:layout_marginTop="7dp"
                	android:paddingBottom="6dp"
    				android:paddingLeft="10dp"
    				android:paddingRight="10dp"
    				android:paddingTop="6dp"
	        	    android:inputType="text" />
	    	    
	    	    <TextView
	        		android:id="@+id/add_property_zip_ViewText"
	        		android:text="@string/zip_code"
	        		android:gravity="left|center_vertical"
	        		android:textColor="@color/black"
	        		android:layout_marginLeft="20dp"
	        		android:textStyle="bold"
               		android:layout_marginRight="20dp"
               		android:layout_marginTop="20dp"
	        		android:layout_width="fill_parent"
        			android:layout_height="wrap_content"
	        	/>
	    	    
	    	    <EditText
	        	    android:id="@+id/add_property_zip_EditText"
	        	    android:background="@drawable/textedit"
	        	    android:layout_width="fill_parent"
	        	    android:layout_height="wrap_content"
	        	    android:layout_marginLeft="20dp"
               		android:layout_marginRight="20dp"
                	android:layout_marginTop="7dp"
                	android:paddingBottom="6dp"
    				android:paddingLeft="10dp"
    				android:paddingRight="10dp"
    				android:paddingTop="6dp"
	        	    android:inputType="number" />
	    
		</LinearLayout>
		
	</ScrollView>
	
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/egg_shell">
    
        <Button
    	android:id="@+id/add_property_Button"
        android:layout_width="0dip"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="3dp"
        android:layout_weight="1"
        android:layout_marginBottom="5dp"
        android:background="@drawable/button"
		android:padding="5dp"
        android:layout_height="wrap_content"
        android:text="@string/add_property" />
        
        <Button
    	android:id="@+id/add_property_cancel_Button"
        android:layout_width="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/button"
		android:padding="5dp"
        android:layout_height="wrap_content"
        android:text="@string/cancel" />
 	</LinearLayout>

</LinearLayout>
